<h1>Criar Novo Produto</h1>
<form action="/produtos" method="POST" class="mt-4">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required minlength="3" maxlength="255" class="form-control">
    </div>

    <div class="form-group">
        <label for="quantidade_inicial">Quantidade:</label>
        <input type="number" id="quantidade_inicial" name="quantidade_inicial" required min="1" class="form-control">
    </div>

    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" required minlength="10" maxlength="500" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="categoria">Categoria:</label>
        <select id="categoria" name="categoria" required class="form-control">
            <option value="" disabled selected>Selecione uma categoria</option>
            <option value="Papelaria">Papelaria</option>
            <option value="Higiene">Higiene</option>
            <option value="Alimentos">Alimentos</option>
            <option value="Eletrônicos">Eletrônicos</option>
            <option value="Limpeza">Limpeza</option>
            <option value="Outros">Outros</option>
        </select>
    </div>

    <div id="outraCategoriaDiv" style="display: none;">
        <label for="novaCategoria">Informe a nova categoria:</label>
        <input type="text" name="novaCategoria" id="novaCategoriaInput" class="form-control" placeholder="Digite a nova categoria">
    </div>

    <div class="form-group">
        <label for="fornecimento">Fornecimento:</label>
        <input type="text" id="fornecimento" name="fornecimento" required class="form-control">
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

