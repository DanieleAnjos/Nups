<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h4 class="my-2 text-primary">Criar Novo Produto</h4>
                </div>
                <div class="card-body">
                    <form action="/produtos" method="POST" class="mt-4">
                        <!-- Campo Nome -->
 {{#if success_msg}}
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'success',
            title: 'Sucesso',
            text: '{{success_msg}}',
            confirmButtonText: 'Ok'
          });
        });
      </script>
    {{/if}}

    <!-- Mensagens de erro -->
    {{#if error_msg}}
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'error',
            title: 'Erro',
            text: '{{error_msg}}',
            confirmButtonText: 'Ok'
          });
        });
      </script>
    {{/if}}
                        <div class="form-group mb-4">
                            <label for="nome" class="form-label">Nome:</label>
                            <input type="text" id="nome" name="nome" required minlength="3" maxlength="255" class="form-control shadow-sm">
                        </div>

                            <!-- Campo Quantidade -->
                            <div class="form-group mb-3"  style="display: none;">
                                <label for="quantidade_inicial" class="form-label">Quantidade:</label>
                                <input type="number" id="quantidade_inicial" name="quantidade_inicial" required min="0" class="form-control shadow-sm" value="0">
                            </div>


                        <!-- Campo Descrição -->
                        <div class="form-group mb-3">
                            <label for="descricao" class="form-label">Descrição:</label>
                            <textarea id="descricao" name="descricao" required minlength="5" maxlength="500" class="form-control shadow-sm"></textarea>
                        </div>

                        <!-- Campo Categoria -->
                        <div class="form-group mb-3">
                            <label for="categoria" class="form-label">Categoria:</label>
                            <select id="categoria" name="categoria" required class="form-select shadow-sm">
                                <option value="" disabled selected>Selecione uma categoria</option>
                                <option value="Papelaria">Papelaria</option>
                                <option value="Higiene">Higiene</option>
                                <option value="Alimentos">Alimentos</option>
                                <option value="Eletrônicos">Eletrônicos</option>
                                <option value="Limpeza">Limpeza</option>
                                <option value="Outros">Outros</option>
                            </select>
                        </div>

                        <!-- Campo para nova categoria -->
                        <div id="outraCategoriaDiv" style="display: none;" class="form-group mb-3">
                            <label for="novaCategoria" class="form-label">Informe a nova categoria:</label>
                            <input type="text" name="novaCategoria" id="novaCategoriaInput" class="form-control shadow-sm" placeholder="Digite a nova categoria">
                        </div>

                        <!-- Campo Fornecimento -->
                        <div class="form-group mb-4">
                            <label for="fornecimento" class="form-label">Fornecimento:</label>
                            <input type="text" id="fornecimento" name="fornecimento" required class="form-control shadow-sm">
                        </div>

                        <!-- Botão de Submissão -->
                        <div class="d-flex justify-content-end gap-3">
                            <a href="/produtos" class="btn btn-outline-secondary px-4">Voltar</a>
                            <button type="submit" class="btn btn-primary px-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Script para mostrar campo de nova categoria -->
<script>
    document.getElementById('categoria').addEventListener('change', function () {
        var outraCategoriaDiv = document.getElementById('outraCategoriaDiv');
        if (this.value === 'Outros') {
            outraCategoriaDiv.style.display = 'block';  // Exibe o campo para nova categoria
        } else {
            outraCategoriaDiv.style.display = 'none';   // Esconde o campo
        }
    });
</script>


<style>
    .mt-5 {
        margin-top: 2rem !important;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn {
        margin-top: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border -color: #0056b3;
    }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
        border-color: #6c757d;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        {{#if error_msg}}
            Swal.fire({
                icon: 'error',
                title: 'Erro',
                text: '{{error_msg}}',
                confirmButtonText: 'Ok'
            });
        {{/if}}
        
        {{#if success_msg}}
            Swal.fire({
                icon: 'success',
                title: 'Sucesso',
                text: '{{success_msg}}',
                confirmButtonText: 'Ok'
            });
        {{/if}}
    });
</script>