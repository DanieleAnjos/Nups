
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f6f8;
      color: #333;
    }

    h1 {
      color: #34495e;
      font-size: 2.5rem;
      margin-bottom: 20px;
      font-weight: 700;
    }

    .container {
      max-width: 1100px;
      padding: 40px;
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .card {
      border: none;
      border-radius: 8px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-title {
      color: #2c3e50;
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .card-text {
      color: #7f8c8d;
      font-size: 1rem;
      line-height: 1.5;
    }

    .btn-primary {
      border: none;
      font-size: 1rem;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 6px;
      transition: background-color 0.3s ease;
    }

  </style>
  <div class="container my-5">
    <h1 class="text-center mb-4">Relatórios</h1>

    <div class="row">
      {{#each reports}}
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="{{this.print}}" class="btn btn-primary mt-3" target="_blank">Ver Relatório</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
