<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório de Ocorrências</title>
    <style>
        /* Corpo da página */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            background-color: #f4f6f8;
            color: #333;
        }

        /* Título principal */
        h1 {
            color: #2c3e50;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 10px;
        }

        /* Parágrafo de descrição */
        p {
            text-align: center;
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 20px;
        }

        /* Container principal */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        /* Estilo da tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            font-size: 1rem;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #2980b9;
            color: #fff;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9fbfc;
        }

        tr:hover {
            background-color: #e0ebf5;
        }

        /* Botões */
        .button, .clear-button {
            padding: 8px 16px;
            font-size: 0.9rem;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .button {
            background-color: #4CAF50;
            color: white;
            margin-top: 10px;
        }

        .button:hover {
            background-color: #45a049;
        }

        .clear-button {
            background-color: #e74c3c;
            color: white;
            margin-left: 10px;
        }

        .clear-button:hover {
            background-color: #c0392b;
        }

        /* Formulário de filtro */
        .filter-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .filter-form div {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            color: #34495e;
            margin-bottom: 5px;
        }

        input[type="date"], select {
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            color: #333;
        }

        .actions {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .filter-form {
                flex-direction: column;
            }
            .filter-form div {
                width: 100%;
            }
        }        
        
        @media print {
            .button {
                display: none;
            }

            .filter-form {
                display: none;
            }
        }
    </style>
</head>
 <body>
    <div class="container">
        <h1>Relatório de Ocorrências</h1>


        <!-- Formulário de Filtro -->
        <form method="GET" action="/ocorrencias/viewReport" class="filter-form">
            <div>
                <label for="data">Filtrar por Data:</label>
                <input type="date" name="data" id="data" value="{{query.data}}">
            </div>
            <div>
                <label for="profissional">Filtrar por Profissional:</label>
                <select name="profissional" id="profissional">
                    <option value="">Selecione</option>
                    {{#each profissionais}}
                        <option value="{{this.id}}" {{#if (eq this.id ../query.profissional)}}selected{{/if}}>{{this.nome}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="actions">
                <button type="submit" class="button">Aplicar Filtros</button>
                <button type="button" class="clear-button" onclick="clearFilters()">Limpar Filtros</button>
            </div>
        </form>

        <!-- Tabela de Ocorrências -->
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data</th>
                    <th>Relatório</th>
                    <th>Horário Chegada</th>
                    <th>Horário Saída</th>
                    <th>Profissional</th>
                </tr>
            </thead>
            <tbody>
                {{#each ocorrencias}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.data}}</td>
                    <td>{{this.relatorio}}</td>
                    <td>{{this.horarioChegada}}</td>
                    <td>{{this.horarioSaida}}</td>
                    <td>{{this.profissional.nome}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
                {{#if mensagem}}
        <div class="alert alert-warning">{{mensagem}}</div>
        {{/if}}


        <!-- Botão de Impressão -->
        <div class="actions">
            <a href="javascript:window.print()" class="button">Imprimir Relatório</a>
        </div>
    </div>

    <script>
        // Função para limpar os filtros
        function clearFilters() {
            document.getElementById('data').value = '';  // Limpa o filtro de data
            document.getElementById('profissional').value = '';  // Limpa o filtro de profissional
            window.location.href = '/ocorrencias/viewReport';  // Redireciona para a página sem filtros
        }

        window.onload = function() {
            window.onafterprint = function() {
                // Opcional: fechar a janela após a impressão
                // window.close(); 
            };
        };
    </script>
</body>
</html>