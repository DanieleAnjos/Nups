<h1 class="text-center my-4">Editar Sala</h1>

<form action="/salas/{{sala.id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" class="form-control" value="{{sala.nome}}" required>
    </div>
    <div class="form-group">
        <label for="capacidade">Capacidade</label>
        <input type="number" name="capacidade" class="form-control" value="{{sala.capacidade}}" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea name="descricao" class="form-control">{{sala.descricao}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar Sala</button>
    <a href="/salas" class="btn btn-secondary">Cancelar</a>
</form>
