<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center text-primary mb-4">Cadastrar Nova Sala</h2>

                    <form action="/salas" method="POST">
                        <!-- Campo Nome -->
                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome:</label>
                            <input type="text" id="nome" name="nome" required class="form-control" minlength="3" maxlength="100" placeholder="Digite o nome da sala">
                        </div>

                        <!-- Campo Capacidade -->
                        <div class="mb-3">
                            <label for="capacidade" class="form-label">Capacidade:</label>
                            <input type="number" id="capacidade" name="capacidade" required class="form-control" min="1" placeholder="Número máximo de pessoas">
                        </div>

                        <!-- Campo Descrição -->
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição:</label>
                            <input type="text" id="descricao" name="descricao" maxlength="255" class="form-control" placeholder="Digite uma breve descrição da sala">
                        </div>

                        <div class="d-flex justify-content-end gap-3">
                            <a href="/salas" class="btn btn-outline-secondary px-4">Voltar</a>
                            <button type="submit" class="btn btn-primary px-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Incluir o script do Bootstrap -->
