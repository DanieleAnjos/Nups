<h1 class="text-center my-4">Criar Evento</h1>

<form action="/eventos" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
  
    <div class="mb-3">
        <label class="form-label">Título:</label>
        <input type="text" name="titulo" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira um título.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Descrição:</label>
        <input type="text" name="descricao" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira uma descrição.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Localização:</label>
        <input type="text" name="localizacao" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira uma localização.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Data e Hora Início:</label>
        <input type="datetime-local" name="dataHoraInicio" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira a data e hora de início.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Data e Hora Fim:</label>
        <input type="datetime-local" name="dataHoraFim" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira a data e hora de fim.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Responsáveis:</label>
        <input type="text" name="responsaveis" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira os responsáveis.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Link:</label>
        <input type="url" name="link" class="form-control" required>
        <div class="invalid-feedback">Por favor, insira um link válido.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Privacidade:</label>
        <select name="privacidade" class="form-select" required>
            <option value="Público Geral">Público Geral</option>
            <option value="Privado Servidores">Privado Servidores</option>
        </select>
        <div class="invalid-feedback">Por favor, selecione uma opção de privacidade.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagens:</label>
        <input type="file" name="imagens" class="form-control" accept="image/*" multiple>
    </div>

    <button type="submit" class="btn btn-success">Criar Evento</button>
</form>

<div class="mt-3">
    <a href="/eventos" class="btn btn-secondary">Voltar</a>
</div>

<!-- Scripts para validação do formulário -->
<script>
    // Exemplo de validação de formulário
    (function () {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
