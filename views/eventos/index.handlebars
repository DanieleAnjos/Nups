<main class="content container mt-5">
    <div class="row">
        <!-- Título da Página -->
        <div class="col-12 text-center">
            <h1 class="my-4 text-primary">Eventos</h1>
        </div>
    </div>

            <!-- SweetAlert2 CSS (Opcional, apenas se quiser customizar) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

              <!-- Informações Pessoais -->
    {{#if success_msg}}
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'success',
            title: 'Sucesso',
            text: '{{success_msg}}',
            confirmButtonText: 'Ok'
          });
        });
      </script>
    {{/if}}

    <!-- Mensagens de erro -->
    {{#if error_msg}}
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'error',
            title: 'Erro',
            text: '{{error_msg}}',
            confirmButtonText: 'Ok'
          });
        });
      </script>
    {{/if}}

    <!-- Botão para Criar Novo Evento -->
    <div class="d-flex justify-content-end mb-3">
        <a href="/eventos/create" class="btn btn-success">Criar Novo Evento</a>
    </div>

    <!-- Formulário de Busca -->
<form action="/eventos" method="GET" class="mb-4 p-3 border rounded shadow-sm bg-light">
    <div class="row">
        <!-- Campo de Autor -->
        <div class="col-md-4 mb-2">
            <input type="text" name="autor" class="form-control" placeholder="Buscar por autor" value="{{search.autor}}">
        </div>
        
        <!-- Campo de Data Início -->
        <div class="col-md-3 mb-2">
            <input type="date" name="dataInicio" class="form-control" value="{{search.dataInicio}}">
        </div>
        
        <!-- Botão de Filtrar -->
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-filter"></i> Filtrar
            </button>
        </div>
    </div>
</form>




    <!-- Exibir mensagem de erro, se houver -->
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
    {{/if}}

    <!-- Tabela de Eventos -->
    <div class="table-responsive">
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data e Hora</th>
                    <th>Autor</th>
                    <th>Título</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each eventos}}
                    <tr>
                        <td>{{this.id}}</td>  <!-- ID do evento -->
                        <td>{{formatDateTime this.dataHoraInicio}}</td> <!-- Formatação de data -->
                        <td>{{this.autor}}</td>
                        <td>{{truncate2 this.titulo 50}}</td>
                        <td>
                        <div class="btn-group" role="group" aria-label="Ações do Evento">
                        <!-- Botão Editar -->
                        <a href="/eventos/{{this.id}}/edit" class="btn btn-warning btn-sm me-2" title="Editar">
                            <i class="fas fa-edit"></i> Editar
                        </a>

                        <!-- Formulário para Deletar -->
                        <form action="/eventos/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm me-2" onclick="return confirm('Você tem certeza que deseja excluir este evento?');" title="Deletar">
                            <i class="fas fa-trash-alt"></i> Deletar
                            </button>
                        </form>

                        <!-- Link para Post -->
                        <a href="/Evento-detalhes/{{this.id}}" class="btn btn-info btn-sm me-2" title="Detalhes">
                            <i class="fas fa-info-circle"></i> Post
                        </a>
                        </div>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="4" class="text-center">Nenhum evento encontrado.</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Paginação (se houver) -->
    <div class="d-flex justify-content-center mt-4">
        {{#if pagination}}
            <ul class="pagination">
                {{#if pagination.prev}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.prev}}&titulo={{search.titulo}}&dataHoraInicio={{search.dataHoraInicio}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {{/if}}

                {{#each pagination.pages}}
                    <li class="page-item {{#if this.active}}active{{/if}}">
                        <a class="page-link" href="?page={{this.number}}&titulo={{search.titulo}}&dataHoraInicio={{search.dataHoraInicio}}">{{this.number}}</a>
                    </li>
                {{/each}}

                {{#if pagination.next}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.next}}&titulo={{search.titulo}}&dataHoraInicio={{search.dataHoraInicio}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {{/if}}
            </ul>
        {{/if}}
    </div>
</main>


