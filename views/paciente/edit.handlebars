      <input type="text" class="form-control" name="deficiencia" id="deficiencia" value="{{paciente.deficiencia}}">
    </div>
  </fieldset>

  <fieldset class="border p-4 mb-4">
    <legend>Informações Adicionais</legend>
    <div class="form-group">
      <label for="filhos">Filhos:</label>
      <select class="form-control" name="filhos" id="filhos" onchange="toggleField('filhos', 'quantidadeFilhos', 'idadeFilhos')">
        <option value="false" {{#if (eq paciente.filhos 'false')}}selected{{/if}}>Não</option>
        <option value="true" {{#if (eq paciente.filhos 'true')}}selected{{/if}}>Sim</option>
      </select>
    </div>
    <div class="form-group" id="quantidadeFilhos" style="display: {{#if (eq paciente.filhos 'true')}}block{{else}}none{{/if}}">
      <label for="quantidadeFilhos">Quantidade de Filhos:</label>
      <input type="text" class="form-control" name="quantidadeFilhos" id="quantidadeFilhos" value="{{paciente.quantidadeFilhos}}">
    </div>
    <div class="form-group" id="idadeFilhos" style="display: {{#if (eq paciente.filhos 'true')}}block{{else}}none{{/if}}">
      <label for="idadeFilhos">Idade dos Filhos:</label>
      <input type="text" class="form-control" name="idadeFilhos" id="idadeFilhos" value="{{paciente.idadeFilhos}}">
    </div>
    <div class="form-group">
      <label for="porteArma">Porte de Arma:</label>
      <select class="form-control" name="porteArma" id="porteArma">
        <option value="false" {{#if (eq paciente.porteArma 'false')}}selected{{/if}}>Não</option>
        <option value="true" {{#if (eq paciente.porteArma 'true')}}selected{{/if}}>Sim</option>
      </select>
    </div>
    <div class="form-group">
      <label for="trabalhoArmado">Trabalho Armado:</label>
      <select class="form-control" name="trabalhoArmado" id="trabalhoArmado">
        <option value="false" {{#if (eq paciente.trabalhoArmado 'false')}}selected{{/if}}>Não</option>
        <option value="true" {{#if (eq paciente.trabalhoArmado 'true')}}selected{{/if}}>Sim</option>
      </select>
    </div>
    <div class="form-group">
      <label for="armaPessoal">Arma Pessoal:</label>
      <select class="form-control" name="armaPessoal" id="armaPessoal">
        <option value="false" {{#if (eq paciente.armaPessoal 'false')}}selected{{/if}}>Não</option>
        <option value="true" {{#if (eq paciente.armaPessoal 'true')}}selected{{/if}}>Sim</option>
      </select>
    </div>
  </fieldset>

          <fieldset class="border p-4 mb-4">
            <legend>Imagem do Paciente</legend>
            <div class="form-group">
                <label for="imagemPaciente">Carregar Imagem:</label>
                <input type="file" class="form-control" name="imagem" id="imagemPaciente" accept="image/*" onchange="previewImage(event)">
                <small class="form-text text-muted">Formato aceito: JPG, PNG, GIF.</small>
                <img id="imagemPreview" src="#" alt="Pré-visualização da Imagem" style="display:none; margin-top:10px; max-width:200px;">
            </div>
        </fieldset>



  <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>

<script>
  function setCurrentDate() {
    document.getElementById('dataAtendimento').value = new Date().toISOString().split('T')[0];
  }

  function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function () {
      const output = document.getElementById('imagemPreview');
      output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  }

  async function buscarEndereco() {
    const cep = document.getElementById('cep').value.replace('-', '');
    if (cep) {
      try {
        const response = await fetch(`https://viacep.com.br/ws/${cep}/json/`);
        const data = await response.json();

        if (!data.erro) {
          document.getElementById('endereco').value = data.logradouro || '';
          document.getElementById('bairro').value = data.bairro || '';
          document.getElementById('cidade').value = data.localidade || '';
          document.getElementById('estado').value = data.uf || '';
        } else {
          alert('CEP não encontrado.');
        }
      } catch (error) {
        alert('Erro ao buscar o endereço.');
      }
    }
  }

  function toggleField(selectId, fieldId) {
    const selectElement = document.getElementById(selectId);
    const fieldElement = document.getElementById(fieldId);
    if (selectElement.value === "true") {
      fieldElement.style.display = "block";
    } else {
      fieldElement.style.display = "none";
    }
  }

         // Aplicar máscaras após o carregamento da página
  document.addEventListener("DOMContentLoaded", function () {
    // Máscara para o telefone (formato: (00) 00000-0000)
    VMasker(document.getElementById("telefone")).maskPattern("(99) 99999-9999");

    // Máscara para o telefone de contato (formato: (00) 00000-0000)
    VMasker(document.getElementById("telefoneContato")).maskPattern("(99) 99999-9999");

    // Máscara para o CPF (formato: 000.000.000-00)
    VMasker(document.getElementById("cpf")).maskPattern("999.999.999-99");

    // Máscara para o CEP (formato: 00000-000)
    VMasker(document.getElementById("cep")).maskPattern("99999-999");
  });


</script>

