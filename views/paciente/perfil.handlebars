    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 12px;
    transition: transform 0.2s ease;
  }

  .info-item:hover {
    transform: translateY(-2px);
  }

  .info-item i {
    color: #667eea;
    font-size: 1.2rem;
  }

  .label {
    color: #64748b;
    font-weight: 500;
  }

  .value {
    color: #1e293b;
    font-weight: 600;
    margin-left: auto;
  }

  .address-container {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 12px;
  }

  .address-container p {
    margin: 0.5rem 0;
    color: #1e293b;
  }

  .emergency-contact {
    background: #fff5f5;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #fed7d7;
  }

  .emergency-contact p {
    margin: 0.5rem 0;
    color: #c53030;
  }

  @media (max-width: 768px) {
    .profile-container {
      padding: 1rem;
    }

    .profile-card {
      width: 100%;
    }
  }
</style>
