    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
    background-color: #ffffff;
  }

  .attendances-table th, .attendances-table td {
    padding: 1rem;
    text-align: left;
    border: 1px solid #ddd;
  }

  .attendances-table th {
    background-color: #f3f4f6;
    color: #333;
    font-weight: 600;
  }

  .attendance-item:hover {
    background-color: #f9fafb;
  }

  .attendances-section {
    margin-top: 40px;
  }

