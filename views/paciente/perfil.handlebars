<div class="profile-container">
  <div class="profile-card justify-content-center">
    <div class="profile-header">
      <div class="image-container">
        {{#if paciente.imagePath}}
          <img src="/uploads/{{paciente.imagePath}}" alt="Foto de {{paciente.nome}}" class="profile-image">
        {{else}}
          <img src="/images/default-profile.png" alt="Foto padrão" class="profile-image">
        {{/if}}
      </div>
      <div class="profile-info">
        <h1 class="profile-name">{{paciente.nome}}</h1>
          <span class="profile-badge">{{paciente.status}}</span>
      </div>
    </div>
    <div class="profile-content">
      <div class="info-section">
        <h2>Informações Pessoais</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <span class="label">Email: </span>
            <span class="value"> &nbsp;{{paciente.email}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-calendar-alt"></i>
            <span class="label">Data de Nascimento: </span>
            <span class="value"> &nbsp;{{ formatDate paciente.dataNascimento}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-phone"></i>
            <span class="label">Telefone: </span>
            <span class="value">&nbsp;{{paciente.telefone}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-id-card"></i>
            <span class="label">CPF: </span>
            <span class="value">&nbsp; {{paciente.cpf}}</span>
          </div>
          <div class="info-item">
            <p class="info-single">
              <i class="fas fa-map-marker-alt"></i>
              <span class="label">Endereço: </span>
              {{paciente.endereco}}, <br> {{paciente.bairro}}, {{paciente.cidade}} - {{paciente.estado}}
            </p>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>Histórico Médico</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-stethoscope"></i>
            <span class="label">Condição Médica: </span>
            <span class="value">&nbsp; {{paciente.condicaoMedica}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-pills"></i>
            <span class="label">Medicamentos: </span>
            <span class="value">&nbsp; {{paciente.medicamentos}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-heartbeat"></i>
            <span class="label">Alergias: </span>
            <span class="value">&nbsp; {{paciente.alergias}}</span>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>Contato de Emergência</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-ambulance"></i>
            <span class="label">Nome: </span>
            <span class="value">&nbsp;{{paciente.nomeContato}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-phone-alt"></i>
            <span class="label">Telefone: </span>
            <span class="value">&nbsp;{{paciente.telefoneContato}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>

<!-- Atendimentos -->
  <div class="card">
    <div class="card-header">
      <h2 class="h5 mb-0">Atendimentos</h2>
    </div>
    <div class="card-body">
      {{#if atendimentos}}
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Data</th>
                <th>Profissional</th>
                <th>Registro</th>
              </tr>
            </thead>
            <tbody>
              {{#each atendimentos as |atendimento|}}
                <tr class="attendance-item">
                  <td>{{formatDate atendimento.dataAtendimento}}</td>
                  <td>{{atendimento.profissional.nome}}</td>
                  <td>{{atendimento.registroAtendimento}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{else}}
        <p>Este paciente não possui atendimentos registrados.</p>
      {{/if}}
        </div>
      </div>
    </div>
  </div>




