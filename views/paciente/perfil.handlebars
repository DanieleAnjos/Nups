<div class="profile-container">
  <div class="profile-card">
    <div class="profile-header">
      <div class="image-container">
        {{#if paciente.imagePath}}
          <img src="/uploads/{{paciente.imagePath}}" alt="Foto de {{paciente.nome}}" class="profile-image">
        {{else}}
          <img src="/images/default-profile.png" alt="Foto padrão" class="profile-image">
        {{/if}}
      </div>
      <h1 class="profile-name">{{paciente.nome}}</h1>
    </div>

    <div class="profile-content">
      <div class="info-section">
        <h2>Informações Pessoais</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <span class="label">Email:</span>
            <span class="value">{{paciente.email}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-calendar-alt"></i>
            <span class="label">Data de Nascimento:</span>
            <span class="value">{{formatDate paciente.dataNascimento}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-venus-mars"></i>
            <span class="label">Sexo:</span>
            <span class="value">{{paciente.sexo}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-phone"></i>
            <span class="label">Telefone:</span>
            <span class="value">{{paciente.telefone}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-id-card"></i>
            <span class="label">CPF:</span>
            <span class="value">{{paciente.cpf}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-id-card"></i>
            <span class="label">Matrícula:</span>
            <span class="value">{{paciente.matricula}}</span>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>Histórico Médico</h2>
        <div class="medical-history">
          <p>{{paciente.observacoes}}</p>
        </div>
      </div>

      <div class="info-section">
        <h2>Endereço</h2>
        <div class="address-container">
          <p><i class="fas fa-map-marker-alt"></i> {{paciente.endereco}}</p>
          <p>{{paciente.bairro}}, {{paciente.cidade}} - {{paciente.estado}}</p>
        </div>
      </div>

      <div class="info-section">
        <h2>Contato de Emergência</h2>
        <div class="emergency-contact">
          <p><i class="fas fa-user"></i> {{paciente.nomeContato}}</p>
          <p><i class="fas fa-phone-alt"></i> {{paciente.telefoneContato}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Atendimentos -->
  <div class="attendances-section">
    <h2>Atendimentos</h2>
    {{#if atendimentos}}
      <table class="attendances-table">
        <thead>
          <tr>
            <th>Data</th>
            <th>Profissional</th>
            <th>Registro</th>
          </tr>
        </thead>
        <tbody>
          {{#each atendimentos as |atendimento|}}
            <tr class="attendance-item">
              <td>{{formatDate atendimento.dataAtendimento}}</td>
              <td>{{atendimento.profissional.nome}}</td>
              <td>{{atendimento.registroAtendimento}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>Este paciente não possui atendimentos registrados.</p>
    {{/if}}
  </div>
</div>

<style>
