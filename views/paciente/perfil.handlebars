<div class="profile-container">
  <div class="profile-card justify-content-center">
    <div class="profile-header">
      <div class="header-content">
        <div class="image-container">
          {{#if imagePath}}
            <img src="{{imagePath}}" alt="Foto de {{paciente.nome}}" class="profile-image">
          {{else}}
            <img src="/images/default-profile.png" alt="Foto padrão" class="profile-image">
          {{/if}}
        </div>
        <div class="profile-info">
          <h1 class="profile-name">&nbsp;{{ paciente.nome}}</h1>
          <span class="profile-badge">{{paciente.statusPaciente}}</span>
        </div>
      </div>
    </div>
    <div class="profile-content">
      <div class="info-section">
        <h2>Informações Pessoais</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <span class="label"><strong>Nome: </strong></span>
            <span class="value">{{paciente.nome}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-calendar-alt"></i>
            <span class="label"><strong>Data de Nascimento: </strong></span>
            <span class="value">{{formatDate paciente.dataNascimento}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-phone"></i>
            <span class="label"><strong>Telefone: </strong></span>
            <span class="value">{{formatTelefone paciente.telefone}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-id-card"></i>
            <span class="label"><strong>RG: </strong></span>
            <span class="value">{{formatRg paciente.rg}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-id-card"></i>
            <span class="label"><strong>CPF: </strong></span>
            <span class="value">{{formatCPF paciente.cpf}}</span>
          </div>
          <div class="info-item">
            <p class="info-single">
              <i class="fas fa-map-marker-alt"></i>
              <span class="label"><strong>Endereço: </strong></span>
              {{paciente.endereco}}, <br> {{paciente.bairro}}, {{paciente.cidade}} - {{paciente.estado}}
            </p>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>Histórico Médico</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-stethoscope"></i>
            <span class="label"><strong>Condição Médica: </strong></span>
            <span class="value">{{paciente.condicaoMedica}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-pills"></i>
            <span class="label"><strong>Medicamentos: </strong></span>
            <span class="value">{{paciente.medicamentos}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-heartbeat"></i>
            <span class="label"><strong>Alergias: </strong></span>
            <span class="value">{{paciente.alergias}}</span>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h2>Contato de Emergência</h2>
        <div class="info-grid">
          <div class="info-item">
            <i class="fas fa-ambulance"></i>
            <span class="label"><strong>Nome: </strong></span>
            <span class="value">{{paciente.nomeContato}}</span>
          </div>
          <div class="info-item">
            <i class="fas fa-phone-alt"></i>
            <span class="label"><strong>Telefone: </strong></span>
            <span class="value">{{formatTelefone paciente.telefoneContato}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>

  <!-- Atendimentos -->
  <div class="card">
    <div class="card-header">
      <h2 class="h5 mb-0">Atendimentos</h2>
    </div>
    <div class="card-body">
      {{#if paciente.atendimentos}}
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Data</th>
                <th>Profissional</th>
                <th>Cargo do profissional</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              {{#each paciente.atendimentos as |atendimento|}}
                <tr class="attendance-item">
                  <td>{{formatDateTime atendimento.dataAtendimento}}</td>
                  <td>{{atendimento.profissional.nome}}</td>
                  <td>{{atendimento.profissional.cargo}}</td>
                  <td>
                    <a href="/atendimentos/{{atendimento.id}}" class="btn btn-sm btn-primary">Detalhes</a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{else}}
        <p>Este paciente não possui atendimentos registrados.</p>
      {{/if}}
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2 class="h5 mb-0">Documentos do Paciente</h2>
    </div>
    <div class="card-body">
      <form action="/pacientes/{{paciente.id}}/upload-documento" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="documento">Carregar Documento:</label>
          <input type="file" class="form-control" name="documento" id="documento" accept=".pdf,.doc,.docx,.jpg,.png">
          <small class="form-text text-muted">Formatos aceitos: PDF, DOC, DOCX, JPG, PNG.</small>
        </div>
        <button type="submit" class="btn btn-primary">Enviar Documento</button>
      </form>
    </div>
  </div>

  <hr>

  <h3>Documentos Carregados</h3>
  {{#if paciente.documentos}}
    <div class="documentos-list">
      {{#each paciente.documentos as |documento|}}
        <div class="documento-item">
          <a href="/uploads/{{documento.caminho}}" target="_blank">{{documento.nome}}</a>
          <button type="button" class="btn btn-danger btn-sm" onclick="deleteDocumento('{{documento.id}}')">Excluir</button>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>Nenhum documento carregado.</p>
  {{/if}}
</div>

<script>
  function deleteDocumento(documentoId) {
    if (confirm('Tem certeza que deseja excluir este documento?')) {
      fetch(`/pacientes/{{paciente.id}}/delete-documento/${documentoId}`, {
        method: 'DELETE',
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Erro ao excluir documento. Status: ' + response.status);
        }
        return response.json();
      })
      .then(data => {
        if (data.success) {
          alert('Documento excluído com sucesso!');
          location.reload();
        } else {
          alert('Erro ao excluir documento: ' + data.message || 'Desconhecido');
        }
      })
      .catch(error => {
        console.error('Erro ao excluir documento:', error);
        alert('Erro ao excluir documento. Tente novamente.');
      });
    }
  }
</script>

