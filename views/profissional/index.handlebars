<h2>Lista de Profissionais</h2>
<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Cargo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each profissionais}}
            <tr>
                <td>{{this.nome}}</td>
                <td>{{this.email}}</td>
                <td>{{this.cargo}}</td>
                <td>
                    <a href="/profissionais/edit/{{this.id}}">Editar</a>
                    <form action="/profissionais/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Deletar</button>
                    </form>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="4">Nenhum profissional encontrado.</td>
            </tr>
        {{/each}}
    </tbody>
</table>
