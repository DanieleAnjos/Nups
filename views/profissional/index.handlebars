<h2 class="text-center my-4">Lista de Profissionais</h2>

<div class="text-right mb-3">
    <a href="/profissionais/create" class="btn btn-primary">Adicionar Profissional</a>
</div>

<!-- Formulário de Filtro -->
<form action="/profissionais" method="GET" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="nome" placeholder="Nome" class="form-control" value="{{query.nome}}">
        </div>
        <div class="col-md-4">
            <input type="text" name="cargo" placeholder="Cargo" class="form-control" value="{{query.cargo}}">
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Filtrar</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Cargo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#if profissionais.length}}
            {{#each profissionais}}
                <tr>
                    <td>{{this.nome}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.cargo}}</td>
                    <td>
                        <a href="/profissionais/edit/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/profissionais/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        {{else}}
            <tr>
                <td colspan="4" class="text-center">Nenhum profissional encontrado.</td>
            </tr>
        {{/if}}
    </tbody>
</table>
