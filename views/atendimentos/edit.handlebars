<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        max-width: 900px;
        margin-top: 40px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #3f37cd;
    }
    .form-control, .form-select, textarea {
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .form-control:focus, .form-select:focus, textarea:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .btn-custom {
        border-radius: 10px;
        padding: 10px 20px;
    }
    .form-section {
        margin-bottom: 20px;
    }
    label {
        font-weight: 600;
        display: block;
        margin-bottom: 5px;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group .form-control {
        margin-top: 8px;
    }
    .btn-link {
        padding: 0;
        font-size: 16px;
    }
</style>

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->

</head>
<body>

  <div class="container my-5">
    
    <form action="/atendimentos/{{atendimento.id}}?_method=PUT" method="POST" class="p-4 bg-light rounded shadow-sm">
      
      <h1 class="text-center my-4 text-primary">Editar Atendimento</h1>

      <!-- Campo oculto para o ID do atendimento -->
      <input type="hidden" name="atendimentoId" value="{{atendimento.id}}">

      <!-- Nome do Paciente -->
      <div class="mb-4">
        <label for="nomePaciente" class="form-label">Nome do Paciente:</label>
        <input type="text" name="nomePaciente" id="nomePaciente" class="form-control" value="{{atendimento.nomePaciente}}" readonly>
      </div>

      <!-- Matrícula do Paciente -->
      <div class="mb-4">
        <label for="matriculaPaciente" class="form-label">Matrícula do Paciente:</label>
        <input type="text" name="matriculaPaciente" id="matriculaPaciente" class="form-control" value="{{atendimento.matriculaPaciente}}" readonly>
      </div>

      <!-- Assunto do Atendimento -->
      <div class="mb-4">
        <label for="assuntoAtendimento" class="form-label">Assunto do Atendimento:</label>
        <input type="text" name="assuntoAtendimento" id="assuntoAtendimento" class="form-control" value="{{atendimento.assuntoAtendimento}}" readonly>
      </div>


      <!-- Registro do Atendimento -->
      <div class="mb-4">
        <label for="registroAtendimento" class="form-label">Registro do Atendimento:</label>
        <textarea name="registroAtendimento" id="registroAtendimento" class="form-control" rows="4" required>{{atendimento.registroAtendimento}}</textarea>
      </div>

      <!-- Botão de Envio -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="bi bi-pencil-square"></i> Atualizar Atendimento
        </button>
        <a href="/atendimentos" class="btn btn-secondary btn-lg ms-2">
          <i class="bi bi-arrow-left"></i> Cancelar
        </a>
      </div>

    </form>
  </div>

</body>
</html>
