<h1>Editar Atendimento</h1>

<form action="/atendimentos/{{atendimento.id}}?_method=PUT" method="POST" class="mt-4">

  <div class="form-group">
    <label for="matriculaPaciente">Paciente</label>
    <select name="matriculaPaciente" id="matriculaPaciente" required class="form-control">
      {{#each pacientes}}
        <option value="{{this.matricula}}" {{#if (eq this.matricula ../atendimento.matriculaPaciente)}}selected{{/if}}>{{this.nome}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="numeroProcesso">Número do Processo</label>
    <input type="text" name="numeroProcesso" id="numeroProcesso" value="{{atendimento.numeroProcesso}}" required class="form-control">
  </div>

  <div class="form-group">
    <label for="assunto">Assunto</label>
    <select name="assunto" id="assunto" required class="form-control">
      <option value="Acolhimento de disparo" {{#if (eq atendimento.assunto "Acolhimento de disparo")}}selected{{/if}}>Acolhimento de disparo</option>
      <option value="Acolhimento psicossocial" {{#if (eq atendimento.assunto "Acolhimento psicossocial")}}selected{{/if}}>Acolhimento psicossocial</option>
      <option value="Exposição negativa na mídia" {{#if (eq atendimento.assunto "Exposição negativa na mídia")}}selected{{/if}}>Exposição negativa na mídia</option>
    </select>
  </div>

  <div class="form-group">
    <label for="profissionalId">Profissional</label>
    <input type="text" name="profissionalId" id="profissionalId" value="{{profissional.nome}} - {{profissional.especialidade}}" readonly class="form-control-plaintext">
    <input type="hidden" name="profissionalId" value="{{profissional.id}}">
  </div>

  <div class="form-group">
    <label for="registroAtendimento">Registro de Atendimento</label>
    <textarea name="registroAtendimento" id="registroAtendimento" rows="5" required class="form-control">{{atendimento.registroAtendimento}}</textarea>
  </div>

  <div class="form-group">
    <label for="acolhidoEm">Data de Acolhimento</label>
    <input type="date" name="acolhidoEm" id="acolhidoEm" value="{{atendimento.acolhidoEm}}" required class="form-control">
  </div>

  <button type="submit" class="btn btn-success">Salvar</button>
</form>
