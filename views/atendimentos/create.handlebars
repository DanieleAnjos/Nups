  }

  .container {
    max-width: 900px;
    margin-top: 40px;
  }

  .card {
    border-radius: 12px;
    background: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
  }

  .form-label {
    font-weight: 600;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
    border-radius: 6px;
    transition: 0.3s;
  }

  .btn-success:hover {
    background-color: #218838;
    border-color: #1e7e34;
  }

  .select2-container--default .select2-selection--single {
    height: 38px;
