<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h2 class="my-2">Editar Reserva</h2>
                </div>
                <div class="card-body">
                    <form action="/reservas/{{reserva.id}}?_method=PUT" method="POST" class="needs-validation" novalidate>
                        
                        <!-- Campo Sala -->
                        <div class="mb-4">
                            <label for="salaId" class="form-label fw-bold">Sala:</label>
                            <select name="salaId" id="salaId" class="form-select" required>
                                <option value="" disabled>Selecione a Sala</option>
                                {{#each salas}}
                                    <option value="{{this.id}}" {{#if (eq this.id ../reserva.salaId)}}selected{{/if}}>{{this.nome}}</option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">Por favor, selecione uma sala.</div>
                        </div>

                        <!-- Campo Data -->
                        <div class="mb-4">
                            <label for="data" class="form-label fw-bold">Data:</label>
                            <input type="date" name="data" id="data" class="form-control" value="{{reserva.data}}" required>
                            <div class="invalid-feedback">Por favor, insira uma data válida.</div>
                        </div>

                        <!-- Campo Horário Inicial -->
                        <div class="mb-4">
                            <label for="horarioInicial" class="form-label fw-bold">Horário Inicial:</label>
                            <input type="time" name="horarioInicial" id="horarioInicial" class="form-control" value="{{formatHour reserva.horarioInicial}}" required>
                            <div class="invalid-feedback">Por favor, insira o horário inicial.</div>
                        </div>

                        <!-- Campo Horário Final -->
                        <div class="mb-4">
                            <label for="horarioFinal" class="form-label fw-bold">Horário Final:</label>
                            <input type="time" name="horarioFinal" id="horarioFinal" class="form-control" value="{{formatHour reserva.horarioFinal}}" required>
                            <div class="invalid-feedback">Por favor, insira o horário final.</div>
                        </div>

                        <!-- Campo Profissional -->
                        <div class="mb-4">
                            <label for="profissionalId" class="form-label fw-bold">Profissional:</label>
                            <select name="profissionalId" id="profissionalId" class="form-select" required>
                                <option value="" disabled>Selecione o Profissional</option>
                                {{#each profissionais}}
                                    <option value="{{this.id}}" {{#if (eq this.id ../reserva.profissionalId)}}selected{{/if}}>{{this.nome}}</option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">Por favor, selecione um profissional.</div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-end gap-3">
                            <a href="/reservas" class="btn btn-outline-secondary px-4">Voltar</a>
                            <button type="submit" class="btn btn-primary px-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Validação Bootstrap
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<style>
    .mt-5 {
    margin-top: 2rem !important;
    };
</style>