<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="text-center my-4 text-primary">Criar Nova Reserva</h1>
                    <form action="/reservas" method="POST">

                        <!-- Campo Sala -->
                        <div class="mb-3">
                            <label for="salaId" class="form-label">Sala:</label>
                            <select name="salaId" id="salaId" class="form-select" required>
                                <option value="" disabled selected>Selecione a Sala</option>
                                {{#each salas}}
                                    <option value="{{this.id}}">{{this.nome}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <!-- Campo Data -->
                        <div class="mb-3">
                            <label for="data" class="form-label">Data:</label>
                            <input type="date" name="data" class="form-control" required>
                        </div>

                        <!-- Campo Horário Inicial -->
                        <div class="mb-3">
                            <label for="horarioInicial" class="form-label">Horário Inicial:</label>
                            <input type="time" name="horarioInicial" id="horarioInicial" class="form-control" required>
                        </div>

                        <!-- Campo Horário Final -->
                        <div class="mb-3">
                            <label for="horarioFinal" class="form-label">Horário Final:</label>
                            <input type="time" name="horarioFinal" id="horarioFinal" class="form-control" required>
                        </div>

                        <!-- Campo Profissional -->
                        <div class="mb-3">
                            <label for="profissionalId" class="form-label">Profissional:</label>
                            <select name="profissionalId" id="profissionalId" class="form-select" required>
                                <option value="" disabled selected>Selecione o Profissional</option>
                                {{#each profissionais}}
                                    <option value="{{this.id}}">{{this.nome}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <a href="/reservas" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
