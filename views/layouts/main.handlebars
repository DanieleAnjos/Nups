  <script>
    // Registrar helpers do Handlebars
    Handlebars.registerHelper('ifEquals', function(arg1, arg2, options) {
      return arg1 === arg2 ? options.fn(this) : options.inverse(this);
    });

    Handlebars.registerHelper('isActive', function(currentPath, expectedPath) {
      return currentPath === expectedPath ? 'active' : '';
    });

    // Inputmask Initialization
    $(document).ready(function () {
      Inputmask({ mask: "99.999.999-9" }).mask("#rg");
      Inputmask({ mask: "999.999.999-99" }).mask("#cpf");
      Inputmask({ mask: "99999-999" }).mask("#cep");
      Inputmask({ mask: "(99) 99999-9999" }).mask("#telefone");
    });

    // Função para atualizar o contador de mensagens
    async function atualizarContadorMensagens() {
      try {
        const response = await fetch('/api/mensagens/nao-lidas', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': 'Bearer ' + localStorage.getItem('authToken')
          }
        });

        const data = await response.json();
        const contador = document.getElementById('mensagem-count');

        if (data.count > 0) {
          contador.textContent = data.count;
          contador.style.display = 'inline';
        } else {
          contador.style.display = 'none';
        }
      } catch (error) {
        console.error('Erro ao buscar as mensagens não lidas:', error);
      }
    }

    // Atualizar o contador de mensagens a cada 30 segundos
    setInterval(atualizarContadorMensagens, 30000);
    atualizarContadorMensagens(); // Executa imediatamente ao carregar a página
  </script>
