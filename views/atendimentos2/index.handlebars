<h1 class="text-center my-4">Lista de Atendimentos</h1>

<!-- Tabela de Atendimentos -->
<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered mt-3">
        <thead class="table-primary">
            <tr class="text-center">
                <th>ID</th>
                <th>Paciente</th>
                <th>Profissional</th>
                <th>Assunto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each atendimentos}}
                <tr>
                    <td class="text-center">{{this.id}}</td>
                    <td>{{this.nomePaciente}}</td> <!-- Nome do paciente -->
                    <td>{{this.nomeProfissional}}</td> <!-- Nome do profissional -->
                    <td>{{this.registroAtendimento}}</td> <!-- Registro do atendimento -->
                    <td class="text-center">
                        <!-- Botão Editar -->
                        <a href="/atendimentos2/{{this.id}}/edit" class="btn btn-warning btn-sm mx-1 text-white" title="Editar atendimento">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>

                        <!-- Botão Visualizar -->
                        <a href="/atendimentos2/detalhes/{{this.id}}" class="btn btn-info btn-sm mx-1 text-white" title="Visualizar atendimento">
                            <i class="bi bi-eye"></i> Visualizar
                        </a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="5" class="text-center text-muted">Nenhum atendimento encontrado.</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Adicionando estilos customizados -->
<style>
    .table th, .table td {
        padding: 15px; /* Aumentando o padding para melhorar a legibilidade */
        vertical-align: middle;
    }

    .table th {
        background-color: #f8f9fa; /* Cor de fundo para o cabeçalho */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Cor de fundo ao passar o mouse */
    }

    .btn {
        font-size: 14px; /* Tamanho de fonte para os botões */
        font-weight: bold; /* Negrito para os botões */
    }

    .btn:hover {
        opacity: 0.8; /* Efeito de transparência ao passar o mouse */
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-sm {
        padding: 8px 12px; /* Tamanho do botão */
    }

    .table-responsive {
        margin-top: 20px;
        max-height: 400px; /* Definindo uma altura máxima para a tabela */
        overflow-y: auto; /* Habilitando o scroll quando necessário */
    }

    /* Ajuste para telas pequenas */
    @media (max-width: 767px) {
        .table th, .table td {
            font-size: 12px;
            padding: 8px;
        }

        .btn-sm {
            padding: 6px 10px;
        }
    }
</style>
