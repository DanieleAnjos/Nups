<h1 class="text-center my-4">Detalhes do Atendimento</h1>

<div class="container">
  <div class="card">
    <div class="card-header bg-info text-white">
      <h3>{{atendimento.registroAtendimento}} - Atendimento de {{atendimento.nomePaciente}}</h3>
    </div>
    <div class="card-body">
      <!-- Informações do Paciente -->
      <h4 class="mt-3">Informações do Paciente:</h4>
      <p><strong>Nome:</strong> {{atendimento.nomePaciente}}</p>
      <p><strong>Matrícula:</strong> {{atendimento.matriculaPaciente}}</p>

      <!-- Informações do Profissional -->
      <h4 class="mt-3">Informações do Profissional:</h4>
      <p><strong>Nome:</strong> {{atendimento.nomeProfissional}}</p>
      <p><strong>Cargo:</strong> {{atendimento.profissional.cargo}}</p>

      <!-- Discussão do Caso -->
      <h4 class="mt-3">Discussão do Caso:</h4>
      <p>{{atendimento.discussaoCaso}}</p>

      <!-- Data do Atendimento -->
      <h4 class="mt-3">Data do Atendimento:</h4>
      <p>{{atendimento.dataAtendimento}}</p>
    </div>
  </div>

  <!-- Botão Voltar -->
  <div class="text-center mt-4">
    <a href="/atendimentos2" class="btn btn-primary btn-lg">
      <i class="bi bi-arrow-left"></i> Voltar para a lista de atendimentos
    </a>
  </div>
</div>

<!-- Adicionando estilos customizados -->
<style>
  .card-header {
    font-size: 1.25rem;  /* Aumentando o tamanho da fonte no header */
  }

  .card-body {
    font-size: 1rem;  /* Tamanho de fonte para o corpo da card */
    line-height: 1.5;  /* Melhorando a legibilidade */
  }

  .card-body h4 {
    font-size: 1.1rem;  /* Tamanho de fonte das subcategorias */
    margin-top: 20px;   /* Espaçamento superior para separar as seções */
  }

  .btn-lg {
    font-size: 1.1rem;
    padding: 12px 20px;
  }

  .text-center a {
    font-size: 1.1rem;
  }

  /* Ajustes para responsividade */
  @media (max-width: 767px) {
    .card-body {
      font-size: 0.9rem;
    }

    .btn-lg {
      font-size: 1rem;
      padding: 10px 18px;
    }
  }
</style>
