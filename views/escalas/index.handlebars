<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Escalas</title>

    <!-- Incluindo o FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/dist/fullcalendar.min.css" rel="stylesheet" />

    <!-- Incluindo o FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/dist/fullcalendar.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <!-- Título da página -->
        <h2 class="text-center text-primary my-4">Lista de Escalas</h2>

        <!-- Botão Adicionar Nova Escala -->
        <div class="d-flex justify-content-end mb-3">
            <a href="/escalas/create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Adicionar Escala
            </a>
        </div>


        <form action="/escalas" method="GET" class="mb-4 p-3 border rounded shadow-sm bg-light">
            <div class="row">
                <div class="col-md-5 mb-2">
                    <input type="date" name="data" value="{{query.data}}" class="form-control" placeholder="Data">
                </div>
                <div class="col-md-5 mb-2">
                    <select name="profissional" class="form-control">
                        <option value="">Selecione um Profissional</option>
                        {{#each profissionais}}
                            <option value="{{this.id}}" {{#ifCond this.id ../query.profissional}}selected{{/ifCond}}>{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrar
                    </button>
                </div>
            </div>
        </form>

        <!-- Exibição de Mensagem de Erro -->
        {{#if errorMessage}}
            <div class="alert alert-danger mt-3" role="alert">{{errorMessage}}</div>
        {{/if}}

        <!-- Tabela de Escalas -->
        <div class="table-responsive mt-3">
            <table class="table table-hover table-striped table-bordered">
                <thead class="table-primary">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Data</th>
                        <th>Horário Início</th>
                        <th>Horário Fim</th>
                        <th>Profissional</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each escalas}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.data}}</td>
                            <td>{{this.horarioInicio}}</td>
                            <td>{{this.horarioFim}}</td>
                            <td>{{this.admin.nome}}</td>
                            <td class="text-center">
                                <a href="/escalas/{{this.id}}/edit" class="btn btn-warning btn-sm mx-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <form action="/escalas/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Tem certeza que deseja deletar esta escala?');">
                                        <i class="bi bi-trash"></i> Excluir
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Calendário -->
        <div id="calendar" class="mt-5"></div>

        {{#if (eq escalas.length 0)}}
            <div class="alert alert-info text-center" role="alert">
                Nenhuma escala encontrada.
            </div>
        {{/if}}
    </div>

    <!-- Script para renderizar o FullCalendar -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');

            // Formatar os eventos em formato compatível com o FullCalendar
            const events = [
                {{#each escalas}}
                    {
                        title: '{{this.admin.nome}} - {{this.horarioInicio}} até {{this.horarioFim}}', // Título do evento
                        start: '{{this.data}}T{{this.horarioInicio}}', // Data e horário de início no formato ISO 8601
                        end: '{{this.data}}T{{this.horarioFim}}', // Data e horário de término no formato ISO 8601
                    },
                {{/each}}
            ];

            // Configuração do FullCalendar
            const calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['dayGrid', 'interaction'], // Plugins para exibição e interação com o calendário
                initialView: 'dayGridMonth', // Exibir o calendário no formato de mês
                events: events, // Passar os eventos para o calendário
                editable: true, // Permitir edição no calendário
                droppable: true, // Permitir que eventos sejam arrastados
                locale: 'pt-br', // Localização em português
            });

            // Renderizar o calendário
            calendar.render();
        });
    </script>
</body>
</html>
