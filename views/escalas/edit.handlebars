<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h2 class="my-2">Editar Escala</h2>
                </div>
                <div class="card-body">
                    <!-- Formulário -->
                    <form action="/escalas/{{escala.id}}" method="POST">
                        <!-- Campo Data -->
                        <div class="mb-4">
                            <label for="data" class="form-label">Data</label>
                            <input 
                                type="date" 
                                name="data" 
                                id="data" 
                                class="form-control shadow-sm" 
                                value="{{formatDateToInput escala.data}}" 
                                required>
                        </div>

                        <!-- Campo Horário Início -->
                        <div class="mb-4">
                            <label for="horarioInicio" class="form-label">Horário de Início</label>
                            <input 
                                type="time" 
                                name="horarioInicio" 
                                id="horarioInicio" 
                                class="form-control shadow-sm" 
                                value="{{formatHour escala.horarioInicio}}" 
                                required>
                        </div>

                        <!-- Campo Horário Fim -->
                        <div class="mb-4">
                            <label for="horarioFim" class="form-label">Horário de Término</label>
                            <input 
                                type="time" 
                                name="horarioFim" 
                                id="horarioFim" 
                                class="form-control shadow-sm" 
                                value="{{formatHour escala.horarioFim}}" 
                                required>
                        </div>

                        <!-- Campo Profissional -->
                        <div class="mb-4">
                            <label for="adminId" class="form-label">Profissional</label>
                            <select 
                                name="adminId" 
                                id="adminId" 
                                class="form-select shadow-sm" 
                                required>
                                <option value="" disabled>Selecione o Profissional</option>
                                {{#each profissionais}}
                                    <option value="{{this.id}}" 
                                        {{#ifCond this.id escala.adminId}}selected{{/ifCond}}>
                                        {{this.nome}}
                                    </option>
                                {{/each}}
                            </select>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-end gap-3">
                            <a href="/escalas" class="btn btn-outline-secondary px-4">Voltar</a>
                            <button type="submit" class="btn btn-primary px-4">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
