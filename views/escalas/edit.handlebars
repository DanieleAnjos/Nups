<main class="content">
    <header>
        <h1>Editar Escala</h1>
    </header>
    <form action="/escalas/{{escala.id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="data">Data:</label>
            <input type="date" name="data" class="form-control" value="{{escala.data}}" required>
        </div>

        <div class="form-group">
            <label for="horarioInicio">Horário Início:</label>
            <input type="time" name="horarioInicio" class="form-control" value="{{escala.horarioInicio}}" required>
        </div>

        <div class="form-group">
            <label for="horarioFim">Horário Fim:</label>
            <input type="time" name="horarioFim" class="form-control" value="{{escala.horarioFim}}" required>
        </div>

        <div class="form-group">
            <label for="adminId">Profissional:</label>
            <select name="adminId" class="form-control" required>
                {{#each profissionais}}
                <option value="{{this.id}}" {{#ifCond this.id ../escala.adminId}}selected{{/ifCond}}>{{this.nome}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</main>

<script src="https://kit.fontawesome.com/a076d05399.js" defer></script>
