<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Senha</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/CSS/Styles_Login.css">
</head>
<body>
    <div class="login-container">
        <!-- Logo da Empresa -->
        <img src="/IMG/pisico-removebg-preview.png" alt="Logo da Empresa" class="logo">

        <h1>Alterar Senha</h1>

        <!-- Exibe mensagens de erro ou sucesso -->
        {{#if error_msg}}
            <div class="message error" aria-live="polite">{{error_msg}}</div>
        {{/if}}
        {{#if success_msg}}
            <div class="message success" aria-live="polite">{{success_msg}}</div>
        {{/if}}

        <!-- Formulário para alterar a senha -->
        <form action="/auth/changePassword" method="POST">
            <div>
                <input type="text" name="usuario" placeholder="Usuário" autocomplete="username" required autofocus>
            </div>

            <div class="password-container">
                <input type="password" id="senhaAtual" name="senhaAtual" placeholder="Senha Atual" autocomplete="current-password" required>
                <i class="fas fa-eye toggle-password" onclick="toggleSenha('senhaAtual')"></i>
            </div>

            <div class="password-container">
                <input type="password" id="novaSenha" name="novaSenha" placeholder="Nova Senha" autocomplete="new-password" required>
                <i class="fas fa-eye toggle-password" onclick="toggleSenha('novaSenha')"></i>
            </div>

            <button type="submit">Alterar Senha</button>
        </form>

        <!-- Botão para voltar -->
        <div class="forgot-password">
            <a href="javascript:history.back()" class="forgot-link">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</body>
</html>

<script>
    function toggleSenha(id) {
        const senhaInput = document.getElementById(id);
        const icon = senhaInput.nextElementSibling;

        if (senhaInput.type === 'password') {
            senhaInput.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            senhaInput.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>
