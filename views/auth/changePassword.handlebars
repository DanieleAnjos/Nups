<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Senha</title>
    <link rel="stylesheet" href="/CSS/Styles_Login.css">
</head>
<body>
    <div class="login-container">
        <!-- Logo da Empresa -->
        
        <h1>Alterar Senha</h1>

        <!-- Exibe mensagens de erro ou sucesso -->
        {{#if error_msg}}
            <div class="message error" aria-live="polite">{{error_msg}}</div>
        {{/if}}
        {{#if success_msg}}
            <div class="message success" aria-live="polite">{{success_msg}}</div>
        {{/if}}


    {{#if error}}
        <p class="alert">{{error}}</p>
    {{/if}}
    
    {{#if success}}
        <p class="success">{{success}}</p>
    {{/if}}

        <!-- Formul치rio para alterar a senha -->
        <form action="/auth/changePassword" method="POST">
            <div>
                <input type="text" name="usuario" placeholder="Usu치rio" autocomplete="username" required autofocus>
            </div>

            <div>
                <input type="password" name="senhaAtual" placeholder="Senha Atual" autocomplete="current-password" required>
            </div>

            <div>
                <input type="password" name="novaSenha" placeholder="Nova Senha" autocomplete="new-password" required>
            </div>

            <button type="submit">Alterar Senha</button>
        </form>

        <!-- Link para voltar para a p치gina de login -->
        <button class="btn btn-secondary btn-sm" onclick="history.back()">
            <i class="fa fa-arrow-left"></i> Voltar
        </button>
    </div>
</body>
</html>

