<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="/CSS/Styles_Login.css">

</head>
<body>
    <div class="login-container">
        <!-- Logo da Empresa -->
        <img src="/IMG/pisico-removebg-preview.png" alt="Logo da Empresa" class="logo">
        
        <h1>Login</h1>

        <!-- Exibe mensagens de erro ou sucesso -->
        {{#if error_msg}}
            <div class="message error" aria-live="polite">{{error_msg}}</div>
        {{/if}}
        {{#if success_msg}}
            <div class="message success" aria-live="polite">{{success_msg}}</div>
        {{/if}}

                <!-- Mensagens de erro ou sucesso -->
        {{#if error}}
            <div class="message error" aria-live="polite">{{error}}</div>
        {{/if}}
        {{#if success}}
            <div class="message success" aria-live="polite">{{success}}</div>
        {{/if}}

        <!-- Formulário de login -->
        <form action="/auth/login" method="POST">
            <div>
                <input type="text" id="usuario" name="usuario" placeholder="Usuário" autocomplete="username" required autofocus>
            </div>

        <div class="password-container">
            <input type="password" id="senha" name="senha" placeholder="Senha" autocomplete="current-password" required>
            <i class="fas fa-eye toggle-password" id="toggleSenha"></i>
        </div>


            <button type="submit">Login</button>
        </form>

        <!-- Botão de Esqueceu a senha -->
        <div class="forgot-password">
            <a href="/auth/forgot" class="forgot-link">Esqueceu a senha?</a>
        </div>
    </div>
</body>
</html>

<style>
.forgot-password {
    margin-top: 15px;
    text-align: center;
}

.forgot-link {
    font-size: 0.9rem;
    color: #007BFF;
    text-decoration: none;
}

.forgot-link:hover {
    text-decoration: underline;
    color: #0056b3;
}


</style>

<script>
    

document.getElementById('toggleSenha').addEventListener('click', function() {
    const senhaInput = document.getElementById('senha');
    const icon = this;

    if (senhaInput.type === 'password') {
        senhaInput.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        senhaInput.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
});

</script>