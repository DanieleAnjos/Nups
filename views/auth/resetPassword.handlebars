
<h1>Redefinir Senha</h1>
<p>Por favor, insira sua nova senha abaixo:</p>

<form action="/auth/reset/{{token}}" method="POST">
  <div class="form-group">
    <label for="senha">Nova Senha:</label>
    <input type="password" id="senha" name="senha" class="form-control" required>
  </div>

  <div class="form-group">
    <label for="confirmSenha">Confirme a Nova Senha:</label>
    <input type="password" id="confirmSenha" name="confirmSenha" class="form-control" required>
  </div>

  <button type="submit" class="btn btn-primary">Redefinir Senha</button>
</form>

{{!-- Mensagens de erro ou sucesso --}}
{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if success}}
  <div class="alert alert-success">{{success}}</div>
{{/if}}
