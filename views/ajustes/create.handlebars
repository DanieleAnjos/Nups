<div class="container">

<form action="/ajustes" method="POST" class="p-4 shadow-lg rounded-lg bg-light mx-auto" style="max-width: 500px;">
  <!-- Título do Formulário -->
  <h4 class="text-center mb-4 text-dark font-weight-bold">Ajuste de Estoque</h4>

  <!-- Produto -->
  <div class="form-group">
    <label for="produtoId" class="font-weight-bold text-dark">Produto</label>
    <select name="produtoId" class="form-control custom-select" required>
      <option value="" disabled selected>Selecione um produto</option>
      {{#each produtos}}
        <option value="{{this.id}}">{{this.nome}}</option>
      {{/each}}
    </select>
  </div>

  <!-- Tipo de Ajuste -->
  <div class="form-group">
    <label for="tipo" class="font-weight-bold text-dark">Tipo de Ajuste</label>
    <select name="tipo" class="form-control custom-select" required>
      <option value="" disabled selected>Selecione o tipo de ajuste</option>
      <option value="entrada">Entrada</option>
      <option value="saida">Saída</option>
    </select>
  </div>

  <!-- Quantidade -->
  <div class="form-group">
    <label for="quantidade" class="font-weight-bold text-dark">Quantidade</label>
    <div class="input-group">
      <input type="number" name="quantidade" class="form-control" required min="1" placeholder="Digite a quantidade">
      <div class="input-group-append">
        <span class="input-group-text">unidades</span>
      </div>
    </div>
  </div>

  <!-- Campo de Data (oculto) -->
  <input type="hidden" name="data" value="{{currentDate}}">

  <!-- Botões -->
  <div class="d-flex justify-content-between mt-3">
    <a href="/produtos" class="btn btn-secondary py-2 rounded-pill">
      <i class="fas fa-arrow-left"></i> Cancelar
    </a>
    <button type="submit" class="btn btn-primary py-2 rounded-pill">
      <i class="fas fa-check-circle"></i> Realizar Ajuste
    </button>
  </div>
</form>
</div>

<style>
  body {
    background-color: #f8f9fa; /* Cor de fundo suave */
  }



  .form-control, .custom-select {
    border-radius: 0.5rem; /* Bordas arredondadas */
  }

  .input-group-text {
    background-color: #007bff; /* Cor de fundo do texto de unidades */
    color: white; /* Cor do texto */
    border-radius: 0 0.5rem 0.5rem 0; /* Bordas arredondadas */
  }

  .btn {
    width: 48%; /* Botões ocupam metade da largura */
  }

  .btn-primary {
    background-color: #007bff; /* Cor do botão de ajuste */
    border-color: #007bff; /* Cor da borda */
  }

  .btn-primary:hover {
    background-color: #0056b3; /* Cor do botão ao passar o mouse */
    border-color: #0056b3; /* Cor da borda ao passar o mouse */
  }

  .btn-secondary {
    background-color: #6c757d; /* Cor do botão de cancelar */
    border-color: #6c757d; /* Cor da borda */
  }

  .btn-secondary:hover {
    background-color: #5a6268; /* Cor do botão de cancelar ao passar o mouse */
    border-color: #545b62; /* Cor da borda ao passar o mouse */
  }
</style>