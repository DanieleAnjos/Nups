<h2>Adicionar Nova Ocorrência</h2>
<form action="/ocorrencias" method="POST" class="mt-4">
    <div class="form-group">
        <label for="data">Data:</label>
        <input type="date" name="data" required class="form-control">
    </div>

    <div class="form-group">
        <label for="relatorio">Relatório:</label>
        <textarea name="relatorio" required class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label for="horarioChegada">Horário de Chegada:</label>
        <input type="time" name="horarioChegada" required class="form-control">
    </div>

    <div class="form-group">
        <label for="horarioSaida">Horário de Saída:</label>
        <input type="time" name="horarioSaida" class="form-control">
    </div>

    <div class="form-group">
        <label for="profissionalId">Profissional:</label>
        <select name="profissionalId" required class="form-control">
            <option value="" disabled selected>Selecione um profissional</option>
            {{#each profissionais}}
                <option value="{{this.id}}">{{this.nome}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-success">Adicionar Ocorrência</button>
</form>

<a href="/ocorrencias" class="btn btn-secondary mt-3">Voltar</a>
