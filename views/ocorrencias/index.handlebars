<h2>Lista de Ocorrências</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Data</th>
      <th>Relatório</th>
      <th>Horário de Chegada</th>
      <th>Horário de Saída</th>
      <th>Profissional</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each ocorrencias}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.data}}</td>
        <td>{{this.relatorio}}</td>
        <td>{{this.horarioChegada}}</td> <!-- Corrigido para horarioChegada -->
        <td>{{this.horarioSaida}}</td>   <!-- Corrigido para horarioSaida -->
        <td>{{this.profissional.nome}}</td>
        <td>
          <a href="/ocorrencias/{{this.id}}/edit">Editar</a>
          <form action="/ocorrencias/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Remover</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<a href="/ocorrencias/create">Adicionar Nova Ocorrência</a>
