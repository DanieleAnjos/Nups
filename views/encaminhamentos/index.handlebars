<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Encaminhamentos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ6bH8lX1YdVfK2anGQbhMvDOK0gtyWFM5J0n61V9QhZ8kWnZTna4rbUjxdg" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <!-- Título da página -->
        <h2 class="text-center text-primary my-4">Lista de Encaminhamentos</h2>

        <!-- Botão Adicionar Novo Encaminhamento -->
        <div class="d-flex justify-content-end mb-3">
            <a href="/encaminhamentos/create" class="btn btn-success">
                <i class="bi bi-plus-circle">Adicionar Novo Encaminhamento</i> 
            </a>
        </div>

<!-- Formulário de Filtro -->
<!-- Formulário de Filtro -->
<form action="/encaminhamentos" method="GET" class="mb-4 p-3 border rounded shadow-sm bg-light">
    <div class="row">
        <!-- Campo: Nome do Paciente -->
        <div class="col-md-3 mb-2">
            <input type="text" name="nomePaciente" class="form-control" placeholder="Nome do Paciente" value="{{query.nomePaciente}}">
        </div>

        <!-- Campo: Profissional -->
        <div class="col-md-3 mb-2">
            <input type="text" name="profissional" class="form-control" placeholder="Profissional" value="{{query.profissional}}">
        </div>

        <!-- Campo: Data Início -->
        <div class="col-md-2 mb-2">
            <input type="date" name="data" class="form-control" placeholder="Data" value="{{query.data}}">
        </div>

        <!-- Botão de Filtrar -->
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-filter"></i> Filtrar
            </button>
        </div>
    </div>
</form>


        <!-- Tabela de Encaminhamentos -->
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered mt-3">
                <thead class="table-primary">
                    <tr class="text-center">
                        <th>Data</th>
                        <th>Matrícula Paciente</th>
                        <th>Nome do Paciente</th>
                        <th>Profissional Envio</th>
                        <th>Profissional Recebido</th>
                        <th>Assunto Acolhimento</th>
                        <th>Visto</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each encaminhamentos}}
                        <tr>
                            <td>{{OneDate this.data }}</td>
                            <td>{{this.matriculaPaciente}}</td>
                            <td>{{this.nomePaciente}}</td>
                            <td>{{this.profissionalEnvio.nome}}</td>
                            <td>{{this.profissionalRecebido.nome}}</td>
                            <td>{{this.assuntoAcolhimento}}</td>
                            <td>{{#if this.visto}}Sim{{else}}Não{{/if}}</td>
                            <td class="text-center">
                                <a href="/encaminhamentos/{{this.id}}/edit" class="btn btn-warning btn-sm mx-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a href="/encaminhamentos/{{this.id}}" class="btn btn-info btn-sm mx-1">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                            
                                <form action="/encaminhamentos/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                    <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Tem certeza que deseja deletar este encaminhamento?');">
                                        <i class="bi bi-trash"></i> Remover
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <td colspan="7" class="text-center text-muted">Nenhum encaminhamento encontrado.</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gyb6E1n5NxX6xJphTStW4d1stI35bw7V7mD10RePp4YO2eC6kh1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0L7f+6W1T5pJl0b2zR9zR9zVgQ69Ttch2JlP1k1tU2WzR71j" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            {{#if error_msg}}
                Swal.fire({
                    icon: 'error',
                    title: 'Erro',
                    text: '{{error_msg}}',
                    confirmButtonText: 'Ok'
                });
            {{/if}}
            
            {{#if success_msg}}
                Swal.fire({
                    icon: 'success',
                    title: 'Sucesso',
                    text: '{{success_msg}}',
                    confirmButtonText: 'Ok'
                });
            {{/if}}
        });
    </script>
</body>
</html>

