  min-height: 50px;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
}

.select2-container .select2-selection__choice {
  background-color: #0d6efd;
  color: white;
  border: none;
  padding: 5px 10px;
  border-radius: 20px;
}

</style>
