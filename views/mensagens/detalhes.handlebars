<h1 class="text-center my-4 text-primary">Mensagem - <strong>{{mensagem.assunto}}</strong></h1>

<div class="container shadow-lg p-5 rounded bg-light">
  <!-- Informações do remetente e data -->
  <div class="row mb-4">
    <div class="col-md-6">
      <p class="fw-bold mb-1"><i class="bi bi-person-fill"></i> Remetente:</p>
      <p>{{mensagem.remetente.nome}} <span class="text-muted">({{mensagem.remetente.cargo}})</span></p>
    </div>
    <div class="col-md-6 text-md-end">
      <p class="fw-bold mb-1"><i class="bi bi-calendar-event"></i> Data:</p>
      <p>{{formatDateTime mensagem.createdAt}}</p>
    </div>
  </div>

  <!-- Corpo da mensagem -->
  <div class="mb-4">
    <h4 class="fw-bold mb-3 text-secondary"><i class="bi bi-envelope"></i> Assunto:</h4>
    <div class="border rounded p-4 bg-white shadow-sm">
      <p class="mb-0">{{mensagem.corpo}}</p>
    </div>
  </div>

      {{#if mensagem.arquivo}}
  <div class="mb-4">
    <h4 class="fw-bold mb-3 text-secondary"><i class="bi bi-file-earmark"></i> Arquivo:</h4>
    <div class="border rounded p-4 bg-white shadow-sm">
      <p class="mb-0">
        <a href="/uploads/{{mensagem.arquivo}}" target="_blank" class="btn btn-outline-secondary">
          <i class="bi bi-download"></i> Baixar Arquivo
        </a>
      </p>
    </div>
  </div>
  {{/if}}



  <hr class="my-4">

  <!-- Botão de voltar -->
  <div class="text-center">
    <a href="/mensagens" class="btn btn-outline-primary btn-lg shadow-lg px-4 py-2">
      <i class="bi bi-arrow-left-circle"></i> Voltar
    </a>
  </div> 
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

